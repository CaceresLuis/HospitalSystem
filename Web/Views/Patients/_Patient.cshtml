@model Core.Dtos.PatientsDto

<div class="form-group">
    <label class="control-label">Full Name</label>
    <input asp-for="FullName" placeholder="Enter the patient's full name" class="form-control" />
    <span asp-validation-for="FullName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Document" class="control-label"></label>
    <input asp-for="Document" placeholder="Enter the patient's document" class="form-control" />
    <span asp-validation-for="Document" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Adresss" class="control-label"></label>
    <input asp-for="Adresss" placeholder="Enter the patient's adress" class="form-control" />
    <span asp-validation-for="Adresss" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Phone" class="control-label"></label>
    <input asp-for="Phone" placeholder="Enter the patient's phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>