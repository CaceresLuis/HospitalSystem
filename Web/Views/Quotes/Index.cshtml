@model Core.Dtos.SearchPatientDto

@{
    ViewData["Title"] = "Index";
}

<h1>Search Patient</h1>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Patients">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="DataSearch" placeholder="Typing Data of Patient..." class="form-control" />
                <span asp-validation-for="DataSearch" class="text-danger"></span>
            </div>
            <h5>Select a parameter*</h5>

            <div class="form-group">
                <label class="form-check-label">
                    Expedient
                    <input type="radio" name="Parameter" value="1" checked/>
                </label>
                <label class="form-check-label">
                    Document
                    <input type="radio" name="Parameter" value="2"/>
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>