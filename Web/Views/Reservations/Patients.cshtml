@model Core.Dtos.MedicalHistoryDto

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<div>
    <h4>MedicalHistory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Patient
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
         <dt class = "col-sm-2">
            Expedient
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expedient)
        </dd>
        <dt class = "col-sm-2">
            Date Register
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quotes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quotes.Count)
        </dd>
        <dt class = "col-sm-2">
            Reservations
        </dt>
        @if (Model.Quotes.Count > 0)
       {
           @foreach (var quote in Model.Quotes)
            {
             <dd class = "col-sm-10">
                 @quote.Reservation.Hour
             </dd>  
             
             <dt class = "col-sm-2">
                 Doctor
             </dt>
             <dd class = "col-sm-10">
                 @quote.Reservation.Doctor.FullName
                </dd>
            }
        }
        else
        {
            <dd class = "col-sm-10">
                 este paciente no tiene citas <a asp-action="Create" asp-route-id="@Model.Expedient">Crear cita</a>
             </dd> 
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Expedient">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
